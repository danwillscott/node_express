<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
  <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
</head>
  <script>
    $(document).ready(function () {
        let socket = io.connect();
        $('button').on('click', function (event) {
            socket.emit('counter', {click: 'button pressed'})
            event.preventDefault();
        });
        socket.on('return_click', function (count_return) {
            $('.count').empty().text(count_return.count_return)
        })
    })
  </script>

<body>
<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Lets Get Counting!</span>
          <p>So Far this button has been pressed <span class="count" id="count">0</span> time(s)</p>
        </div>
        <div class="card-action">
          <button class="btn-flat">Press To Add To Count</button>
        </div>
      </div>
    </div>
  </div>

</div>
</body>
</html>